<div class="card text-center">
    <div class="card-header text-center">
        <h2>{{title}}</h2>
        <h5>Created by: {{user.username}} on {{createdAt}}</h5>
    </div>
    <div>
        <p>{{content}}</p>
    </div>
</div>
<div class="form-box">
    <form class="form" id="commentForm" data-id="{{id}}">
        <div class="form-group">
            <textarea class="form-input" id="comment-content" name="comment-content" placeholder="Post a comment"></textarea>

        </div>
        <div class="form-group">
            <button class="btn btn-primary" id="commentBtn">Post</button>
        </div>

    </form>
    {{#each comments}}
    <p>
        {{content}} on {{createdAt}} by {{user.username}}
    </p>
    <div class="col-md-4">
        <button id="deleteButton" class="btn btn-sm btn-danger" data-id="{{id}}">DELETE </button>
    </div>
    {{/each}}
</div>
<script src="/public/js/comment.js"></script>