    {{#each posts as |post|}}


    <div class="card">
        <div class="card-header d-flex flex-row align-end justify-space-between">

          <h2>
            <a href="/posts/{{post.id}}">{{post.title}}</a>
          </h2>
      <p>Post Created by: {{post.user.username}} on {{post.createdAt}}</p>
      </div>
      <div class="card-body">
        <p>
          {{post.content}}
        </p>
      </div>
    </div>
  
    {{/each}}